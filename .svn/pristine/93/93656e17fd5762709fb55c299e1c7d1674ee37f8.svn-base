/* pages/home/home.wxss */
.container swiper{
  width: 100%;
  height: 268rpx;
}
.container .slde-image{
  width: 100%;
  height: 100%;
}
.bannerType{
  height: 284rpx;
  width: 100%;
}
.nav{
  display: flex;
  justify-content: space-between;
}
.nav-item{
  margin: 20rpx;
}
.nav text{
  display: block;
  font-size: 32rpx;
  text-align: center;
}
.nav-item image{
  width: 130rpx;
  height: 133rpx;
  margin-top: 47%;



}
.wine .daohang{
  text-align: center;
}
.wine .fenge{
  color: #ccc;
}
.wine .fenge>.word{
  color: black;
  font-weight: 900;
  margin-left: 3%;
}
.wine-list{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.wine-item{
  margin: 20rpx;
}
.wine-item text{
  display: block;
  width: 325rpx;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.wine image{
  width: 330rpx;
  height: 330rpx;  
}
.wine .wire{
  width: 150rpx;
  height: 30rpx;
}
.wine .wire_right{
  margin-left: 3%;
}
.wine .hot{
  width: 50rpx;
  height: 50rpx;
  margin-left: 3%;
}
.textTop{
  font-weight: 900;
}
.textCenter{
  font-size: 30rpx !important;
  font-family: 'PingFangSC-Regular';
  color: #666666;
}
.wine-item .p1{
  color: #A63432;
  font-size: 42rpx;
}
.wine-item .p2{
  color: #ccc;
  font-size: 36rpx;
  padding-left: 3%;
  text-decoration:line-through;
}
.back p{
  margin-left: 600rpx;
}
.back image{
  width: 60rpx;
  height: 60rpx;
  background: #ccc;
  border-radius: 50%;
}

.footer {
  width: 100%;
  height:3.3rem;
  background:rgba(255,255,255,1);
  border:1px solid rgba(229,229,229,1);
  position:absolute;
  bottom:0;
}

.mokuai {
  margin-left: 3rem;
}
.mokuaione {
  margin-left: 7rem;
  margin-top: -3rem;
}
.mokuaitwo {
  margin-left: 11rem;
  margin-top: -3.1rem;
}
.mokuaithree {
  margin-left: 15rem;
  margin-top: -3rem;
}
.diimg {
  margin-top: 0.5rem;
  width:1.5rem;
  height:1.5rem;
}
.ditext {
  margin-left: 0.1rem;
  font-size:0.6rem;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.ditextone {
  margin-left: -0.1rem;
  font-size:0.6rem;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
}


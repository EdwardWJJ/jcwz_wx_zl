.wine {
  margin-top: 0.5rem;
}
.wine-list{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.wine-item{
  margin: 20rpx;
}
.wine-item text{
  display: block;
  width: 325rpx;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.wine image{
  width: 330rpx;
  height: 330rpx;  
}
.textTop{
  font-weight: 900;
}
.wine-item .p1{
  color: #A63432;
  font-size: 42rpx;
}
.wine-item .p2{
  color: #ccc;
  font-size: 36rpx;
  padding-left: 3%;
  text-decoration:line-through;
}
.check {
  position: absolute;
  margin-left: 6.7rem;
  margin-top: 0.5rem
}
checkbox .wx-checkbox-input{
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  background: #FF783B;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size:30rpx;
  color:#fff;
  background: transparent;
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
}
.footer {
  width: 100%;
  height:3rem;
  background:rgba(255,255,255,1);
  border:1px solid rgba(229,229,229,1);

}
.wine-list{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.wine-item{
  margin: 20rpx;
}
.wine-item text{
  display: block;
  width: 325rpx;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.wine image{
  width: 330rpx;
  height: 330rpx;  
}
.textTop{
  font-weight: 900;
}
.wine-item .p1{
  color: #A63432;
  font-size: 42rpx;
}
.wine-item .p2{

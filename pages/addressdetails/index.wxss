/* pages/addressdetails/index.wxss */
page{
  background-color: rgb(250, 250, 250);
}

.box_list {
  width: 100%;
  height: 100rpx;
  background-color: rgb(255, 255, 255);
  border-bottom: 1rpx solid rgb(244, 244, 244);
}
.box_top{
  margin-top: 4%;
}
.box_list_left {
  float: left;
  margin-left: 2%;
  font-size: 36rpx;
  padding-top: 27rpx;
}

.box_list_right {
  float: right;
  padding-top: 30rpx;
  font-size: 30rpx;
  margin-right: 2%;
}
.box_list .switch{
  padding-top: 17rpx !important;
}
.box_list_right view{
  float: left;
  color: rgb(170, 170, 170);
}

.box_list .box_list_right image {
  width: 30rpx;
  height: 40rpx;
  padding-top: 1%;
  padding-left: 33%;
}
.exit{
  text-align: center;
  width: 90%;
  height: 100rpx;
  background-color: rgb(169, 57, 55);
  margin-left: 5%;
  border-radius: 10rpx;
  margin-top: 120%;
}
.exit view{
  padding-top: 25rpx;
  color: white;
}